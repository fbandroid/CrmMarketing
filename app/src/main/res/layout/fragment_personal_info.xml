<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            app:cardElevation="@dimen/dimen_02"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:padding="@dimen/dimen_10"
                    android:text="Customer Personal Information"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/fragment_inquiry_form_edtApplicantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_people_grey_700_24dp"
                    android:padding="@dimen/dimen_10"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/fragment_inquiry_form_edtAddr"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_contact_mail_grey_700_24dp"
                    android:gravity="top|start"
                    android:padding="@dimen/dimen_10"
                    android:scrollbars="vertical"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


                <TextView
                    android:textColor="@android:color/black"

                    android:id="@+id/fragment_inquiry_form_edtMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_call_grey_700_24dp"
                    android:maxLength="10"
                    android:padding="@dimen/dimen_10"
                    android:textStyle="bold" />


                <TextView
                    android:textColor="@android:color/black"

                    android:id="@+id/fragment_inquiry_form_edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_call_grey_700_24dp"
                    android:padding="@dimen/dimen_10"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@android:color/black"

                    android:id="@+id/fragment_inquiry_form_edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_email_grey_700_24dp"
                    android:padding="@dimen/dimen_10"
                    android:text=""
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/fragment_inquiry_form_edtOptionalEmail"
                    android:textColor="@android:color/black"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_10"
                    android:padding="@dimen/dimen_10"
                    android:text=""
                    android:textStyle="bold"
                    android:visibility="gone" />


                <TextView
                    android:textColor="@android:color/black"

                    android:id="@+id/fragment_inquiry_form_tvBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_date_range_grey_700_24dp"
                    android:padding="@dimen/dimen_10"
                    android:textStyle="bold" />


                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/fragment_inquiry_form_spOccupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:padding="@dimen/dimen_10"
                    android:textStyle="bold" />

                <TextView
                    android:paddingStart="10dp"
                    android:text="Mother Name"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/tvMotherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:paddingStart="10dp"
                    android:text="Family Code"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="16sp"
                    android:paddingStart="10dp"

                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/tvFamilyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView

                    android:paddingStart="10dp"
                    android:text="TSB code"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="16sp"
                    android:paddingStart="10dp"

                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/tvTSBCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
