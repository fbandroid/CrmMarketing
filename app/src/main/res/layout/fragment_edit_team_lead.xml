<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/dimen_02">

            <RelativeLayout
                android:layout_margin="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/girlprofile"
                    android:padding="@dimen/dimen_05"
                    android:id="@+id/row_fragment_team_lead_ivprofile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/dimen_20" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/row_fragment_team_lead_ivprofile"
                    android:id="@+id/row_fragment_team_lead_tvName"
                    android:layout_marginBottom="@dimen/dimen_20">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/row_fragment_team_lead_edtName"
                        android:hint="Name"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row_fragment_team_lead_ivprofile"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:id="@+id/row_admin_dashboard_tvId">


                    <android.support.design.widget.TextInputEditText
                        android:hint="ID Number"
                        android:id="@+id/row_fragment_team_lead_edtId"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row_admin_dashboard_tvId"
                    android:id="@+id/row_fragment_team_lead_tvAddress">

                    <android.support.design.widget.TextInputEditText
                        android:hint="Address"
                        android:id="@+id/row_fragment_team_lead_edtAddr"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/row_fragment_team_lead_tvAddress"
                    android:id="@+id/row_fragment_team_lead_tvPhone">

                    <android.support.design.widget.TextInputEditText
                        android:hint="Mobile No"
                        android:id="@+id/row_fragment_team_lead_edtMobile"
                        android:inputType="number"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_below="@+id/row_fragment_team_lead_tvPhone"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimary"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:id="@+id/row_fragment_team_lead_btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>