<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginBottom="@dimen/dimen_10"
    android:layout_marginEnd="@dimen/dimen_05"
    android:background="@drawable/bg_round_corner">

    <TextView
        android:padding="@dimen/dimen_04"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:id="@+id/row_chip_tvName"
        android:text="Hello Android"
        android:ellipsize="marquee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toEndOf="@+id/row_chip_tvName"
        android:padding="@dimen/dimen_02"
        android:layout_centerVertical="true"
        android:textSize="10sp"
        android:id="@+id/row_chip_tvCatName"
        android:text="Android"
        android:ellipsize="marquee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/row_chip_ivDelete"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/row_chip_tvCatName"
        android:src="@drawable/ic_clear_grey_600_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>