<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autolabel="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">


        <com.dpizarro.autolabel.library.AutoLabelUI
            android:layout_marginBottom="@dimen/dimen_20"
            android:id="@+id/label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            autolabel:max_labels="10"
            autolabel:show_cross="true"
            autolabel:label_background_res="@drawable/bg_round_corner"
            autolabel:text_color="@android:color/black"
            autolabel:text_size="@dimen/label_title_size"
            autolabel:icon_cross="@drawable/ic_clear_grey_600_24dp"
            autolabel:label_padding="10dp"
            autolabel:label_clickable="true" />


        <AutoCompleteTextView
            android:layout_marginBottom="@dimen/dimen_20"
            android:id="@+id/auto_complete_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/dimen_20"
            android:id="@+id/fragment_add_target_tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginBottom="@dimen/dimen_20"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:text="Start Date"
            android:id="@+id/fragment_add_target_btnStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/dimen_20"
            android:id="@+id/fragment_add_target_tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="End Date"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:id="@+id/fragment_add_target_btnEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.design.widget.TextInputLayout
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:inputType="number"
                android:hint="Sales Amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</ScrollView>
