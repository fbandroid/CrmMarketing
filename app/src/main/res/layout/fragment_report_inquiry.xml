<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        app:cardElevation="@dimen/dimen_02"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_margin="@dimen/dimen_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Inquiry"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/fragment__report_inquiry_tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dimen_20"
                android:drawablePadding="@dimen/dimen_10"
                android:drawableStart="@drawable/ic_people_grey_700_24dp"
                android:padding="@dimen/dimen_10"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/fragment__report_inquiry_tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:drawablePadding="@dimen/dimen_10"
                android:drawableStart="@drawable/ic_call_grey_700_24dp"
                android:maxLength="10"
                android:padding="@dimen/dimen_10"
                android:textStyle="bold" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_30">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/fragment_report_edtRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remark"
                    android:inputType="textMultiLine" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_30">

                <android.support.design.widget.TextInputEditText
                    android:visibility="gone"
                    android:id="@+id/fragment__report_inquiry_edtDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter day"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_marginBottom="@dimen/dimen_30"
                android:id="@+id/fragment__report_inquiry_tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Spinner
                android:id="@+id/fragment__report_inquiry_spStatus"
                android:layout_marginBottom="@dimen/dimen_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginBottom="@dimen/dimen_30"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_10"
                android:text="submit"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:id="@+id/fragment_report_btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>