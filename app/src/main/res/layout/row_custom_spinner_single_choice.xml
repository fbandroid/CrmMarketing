<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dimen_02">

        <RelativeLayout
            android:layout_margin="@dimen/dimen_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="@dimen/dimen_05"
                android:id="@+id/row_admin_dashboard_ivprofile"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:padding="@dimen/dimen_05"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="Nirav Shah"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/row_admin_dashboard_ivprofile"
                android:id="@+id/row_admin_dashboard_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="@dimen/dimen_05"
                android:textSize="16sp"
                android:text="104"
                android:layout_below="@+id/row_admin_dashboard_tvName"
                android:layout_toEndOf="@+id/row_admin_dashboard_ivprofile"
                android:id="@+id/row_admin_dashboard_tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>