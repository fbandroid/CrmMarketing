<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            app:cardElevation="@dimen/dimen_02"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:padding="@dimen/dimen_10"
                    android:text="Target Detail"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/fragment_target_master_tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_people_grey_700_24dp"
                    android:padding="@dimen/dimen_10"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_target_master_tvTopEmp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_people_grey_700_24dp"
                    android:padding="@dimen/dimen_10"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


                <TextView

                    android:layout_width="wrap_content"
                    android:text="Start Date"
                    android:layout_height="wrap_content"
                   android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/fragment_target_master_tvStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_date_range_grey_700_24dp"
                    android:gravity="top|start"
                    android:padding="@dimen/dimen_10"
                    android:scrollbars="vertical"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


                <TextView

                    android:layout_width="wrap_content"
                    android:text="End Date"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/fragment_target_master_tvEndDate"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_date_range_grey_700_24dp"
                    android:maxLength="10"
                    android:padding="@dimen/dimen_10"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
