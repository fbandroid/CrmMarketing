<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_10"
            app:cardElevation="@dimen/dimen_02"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:padding="@dimen/dimen_10"
                    android:text="Reference Information"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Referee Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="--"
                    android:id="@+id/fragment_reference_info_tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20" />

                <TextView
                    android:textColor="@android:color/black"

                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Referee Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fragment_reference_info_tvEmail"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:padding="@dimen/dimen_10"
                    android:text="" />
                <TextView
                    android:textColor="@android:color/black"

                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Referee Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fragment_reference_info_tvPhone"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:padding="@dimen/dimen_10"
                    android:text="" />



                <TextView
                    android:textColor="@android:color/black"

                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Referee code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fragment_reference_info_tvRefCode"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:padding="@dimen/dimen_10"
                    android:text="" />


                <TextView
                    android:textColor="@android:color/black"

                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Other Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fragment_reference_info_tvOther"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:padding="@dimen/dimen_10"
                    android:text="" />


                <TextView
                    android:textColor="@android:color/black"

                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Nominee Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fragment_reference_info_tvNomineeName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:padding="@dimen/dimen_10"
                    android:text="" />


                <TextView
                    android:textColor="@android:color/black"

                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Nominee PAN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fragment_reference_info_tvNomineePAN"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:padding="@dimen/dimen_10"
                    android:text="" />


            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

